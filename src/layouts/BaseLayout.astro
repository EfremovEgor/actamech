---
import Header from "@components/layout/header/Header.astro";
import "@styles/global.css";
import Footer from "@components/layout/footer/Footer.astro";
import { ClientRouter } from "astro:transitions";
import { type IBaseLayout } from "./interfaces";

interface Props extends IBaseLayout {}
const {
	head: { title = "Acta Mechanica et Imperium", description, keywords } = {},
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link
			rel="icon"
			href="/favicon-dark.png"
			type="image/png"
			media="(prefers-color-scheme: dark)"
		/>

		<title>Actamech | {title}</title>
		{description && <meta name="description" content={description} />}
		{keywords && <meta name="keywords" content={keywords} />}
	</head>
	<body class="min-h-screen flex flex-col items-center bg-primary">
		<Header transition:persist />
		<main class="min-h-screen w-full">
			<slot />
		</main>
		<Footer />
	</body>
</html>
