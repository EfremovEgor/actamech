---
import BaseInformationPageLayout from "@layouts/BaseInformationPageLayout.astro";
import aboutPageMainImage from "@assets/images/aboutPage/aboutPageMainImage.jpg";
import SectionTitleNoContainer from "@components/common/SectionTitleNoContainer.astro";
import CallForPapersItem from "@components/pages/special-issues/CallForPapersItem.astro";
import { EXAMPLE_CALLS } from "src/pages/calls-for-papers/ExampleCall";
import ArticleCard from "@components/common/articles/ArticleCard";
import { ARTICLES } from "../ExampleArticle";
const article = ARTICLES[0];
---

<BaseInformationPageLayout
  head={{
    title: "Special issues and article collections",
    description:
      "Acta Mechanica et Imperium special issues and article collections",
  }}
  image={aboutPageMainImage}
  pageTitle="Special issues and article collections"
>
  <div class="container mx-auto mt-8">
