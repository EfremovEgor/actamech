---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import indexImage from "@assets/images/index/indexImage.jpg";
import indexAboutImage from "@assets/images/index/indexAboutImage.png";
import EvaArrowRightFill from "~icons/eva/arrow-right-fill";
import SectionTitle from "@components/common/SectionTitle.astro";
import ArticleCard from "@components/pages/index/ArticleCard.astro";
import { ISSN } from "@lib/constants";
---

<BaseLayout>
	<div class="w-full relative">
		<Image
			class="w-full brightness-50 h-80 object-cover object-[25%_0%] bg-scroll"
			src={indexImage}
			alt={"Main page image"}
		/>
		<div
			class="text-secondary-text absolute z-10
            
            top-0 left-0 h-full w-full
            flex items-center justify-center"
		>
			<div
				class="py-8 backdrop-blur-xs w-full flex items-center justify-center flex-col"
			>
				<h1 class="text-3xl font-bold font-[ZT-Neue-Ralewe-Regular]">
					ACTA MECHANICA ET IMPERIUM
				</h1>
				<div class="text-center flex flex-col gap-4 mt-4">
					<p
						class="px-8 py-2 italic border-accent border-b-2 text-xl"
					>
						Publishing model: Online
					</p>
					<p>ISSN: {ISSN}</p>
				</div>
			</div>
		</div>
	</div>
	<div class=`container mx-auto py-8 bg-no-repeat bg-cover`>
		<h1 class="text-3xl text-accent uppercase ml-4">ABOUT JOURNAL</h1>

		<div
			class="text-left-border ml-4 mt-8 grid grid-flow-row-dense grid-cols-4"
		>
			<div class="col-span-3">
				<div class="flex flex-row gap-16">
					<p class="font-semibold text-justify">
						Acta Mechanica et Imperium is a peer review electronic
						journal published 4 times per year.
					</p>
					<p class="font-semibold text-justify">
						The journal is focused on publishing original
						high-quality research articles related to mechanics and
						control, covering a wide range of subject areas related
						to modern research and development in this field.
					</p>
				</div>
				<p class="mt-4 text-justify">
					In addition to regular papers and review articles, the
					journal publishes select special issues and conference
					proceedings on hot topic, covering the following subject
					areas (but not limited to): space flight Mechanics, space
					operations and support, small satellite missions, earth
					observations, space sensors and actuators, deep space
					exploration, space materials and structures, space power and
					propulsion, space policy, law and economics. Particular
					attention is given to articles devoted to the application of
					AIML technologies in above mentioned fields, including
					optimization and automation of control processes, research
					and development of up-to-date robotic system, exploration
					and extraction of minerals on Earth and in space.
				</p>
			</div>
			<Image
				src={indexAboutImage}
				alt="About"
				class="col-span-1 my-auto h-auto w-4/5 mx-auto rotate-[150deg]"
			/>
		</div>
		<a
			href="/about/aims-and-scope"
			class="ml-auto w-fit mt-8 text-secondary hover:text-accent font-bold flex flex-row items-center transition-colors
duration-150 ease-in-out group underline-on-hover"
		>
			<span>READ MORE</span>
			<EvaArrowRightFill />
		</a>
		<SectionTitle title="Editor-in-Chief" classNameTitle="text-accent" />
		<article class="text-left-border mt-8 ml-4">
			<h2 class="text-lg text-accent font-semibold ml-0 indent-0">
				Yury N. Razoumny
			</h2>

			<p class="indent-0">
				Director of Academy of Engineering of RUDN University
				Academician of Russian Academy of Cosmonautics Academician of
				International Academy of Astronautics, IAA Lifetime Associate
				Fellow, American Institute of Aeronautics and Astronautics, AIAA
			</p>
		</article>
		<SectionTitle title="Latest Articles" classNameTitle="text-accent" />
		<div class="flex flex-row flex-wrap gap-8 mt-8">
			<article class="text-left-border ml-4">
