---
import siteIcon from "@assets/icons/siteIconLight.png";
import RUDNLogo from "@assets/icons/RUDNLogo.png";
import ConfChairLogo from "@assets/icons/ConfChairLogo.png";
import { Image } from "astro:assets";
import MainFooterLink from "./MainFooterLink.astro";
import MaterialSymbolsMailOutline from "~icons/material-symbols/mail-outline";
---

<footer
  class="py-4 bg-secondary w-full text-secondary-text min-h-96 flex flex-col justify-between border-t-accent border-t-2"
  transition:persist
>
  <div class="container flex justify-between m-auto">
    <a href="/" class="flex flex-row items-center my-auto gap-4 h-full">
      <div class="w-[330px]">
        <h1 class="font-semibold font-playfair-display text-xl text-nowrap">
          ACTA MECHANICA ET IMPERIUM
        </h1>
        <!-- <p class="text-justify text-xs">
					Online edition – an electronic journal «Acta Mechanica Et
					Imperium» («Scientific and Technical Journal Acta Mechanica
					Et Imperium», ActaMech Journal)
				</p> -->
        <div class="mt-6 flex flex-row gap-2 justify-between">
          <MaterialSymbolsMailOutline className="text-3xl" />
          <Image class="h-10 w-auto ml-5" src={RUDNLogo} alt="RUDN Logo" />
          <Image
            class="h-10 w-auto ml-5"
            src={ConfChairLogo}
            alt="ConfChair Logo"
          />
        </div>
      </div>
      <Image class="h-30 w-auto ml-5" src={siteIcon} alt="Site icon" />
    </a>
    <div
      class="after:bg-primary after:opacity-20 after:h-3/4 after:my-auto after:w-[1px] flex flex-row"
    >
    </div>
    <section>
      <div class="flex flex-col gap-2">
        <h1 class="uppercase text-lg font-bold mb-4">Articles & Issues</h1>
        <MainFooterLink text="Latest issue" url="/" />
        <MainFooterLink text="All issues" url="/" />
        <MainFooterLink text="Articles in press" url="/" />
        <MainFooterLink text="Article collections" url="/" />
      </div>
    </section>
    <div
      class="after:bg-primary after:opacity-20 after:h-3/4 after:my-auto after:w-[1px] flex flex-row"
    >
    </div>
    <section>
      <div class="flex flex-col gap-2">
        <h1 class="uppercase text-lg font-bold mb-4">About</h1>
        <MainFooterLink text="Aims and scope" url="/" />
        <MainFooterLink text="Editorial board" url="/" />
        <MainFooterLink text="Ethics Policy" url="/" />
        <MainFooterLink text="Declaration on privacy" url="/" />
      </div>
    </section>
    <div
      class="after:bg-primary after:opacity-20 after:h-3/4 after:my-auto after:w-[1px] flex flex-row"
    >
    </div>
    <section>
      <div class="flex flex-col gap-2">
        <h1 class="uppercase text-lg font-bold mb-4">Publish</h1>
        <MainFooterLink external text="Submit your article " url="/" />
        <MainFooterLink text="Guide for authors" url="/" />
        <MainFooterLink text="News" url="/" />
      </div>
    </section>
  </div>
  <div
    class="text-gray-400 text-sm flex flex-row justify-between items-end border-t-2 px-4 pt-2 border-t-primary"
  >
    <section>
      <p>Copyright © 2025 RUDN University. All rights reserved.</p>
      <p>AMEI is a partner of RUDN University and RAS.</p>
    </section>
    <section>
      <a class="hover:text-gray-100 base-colors-transition" href="/contacts"
        >Contact</a
      > |
      <a class="hover:text-gray-100 base-colors-transition" href="/sitemap"
        >Site Map</a
      > |
      <a class="hover:text-gray-100 base-colors-transition" href="/policy"
        >Terms & Privacy Policy</a
      >
    </section>
  </div>
</footer>
