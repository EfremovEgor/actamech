---
interface Props {
	id?: string;
	title: string;
	alt?: boolean;
	classNameTitle?: string;
	top?: string;
	bottom?: string;
}
const {
	id,
	title,
	alt = false,
	classNameTitle = "",
	top = "16",
	bottom = "4",
} = Astro.props;
---

