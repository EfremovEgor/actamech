---
import type { ICallForPaper } from "@components/types/interfaces/callForPapers";

type Props = Omit<ICallForPaper, "editors" | "lastUpdated" | "articles">;
const { id, title, submissionDeadline, description } = Astro.props;
---

<div class="grid grid-cols-2 bg-secondary/5 rounded-base px-4 py-8">
	<div>
		<a
			class="text-xl border-underline-2 w-fit cursor-pointer hover-accent"
			href={`/calls-for-papers/${id}`}>{title}</a
		>
		<p class="mt-4 text-tertiary-text">
			Submission deadline: {submissionDeadline}
		</p>
	</div>
	<p class="text-justify overflow-ellipsis line-clamp-4">
		{description}
	</p>
</div>
